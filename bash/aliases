# bash
alias l='ls'
alias ls='ls -G'
alias ll='ls -lha'
alias dot="vim ~/Documents/dotfiles"
alias reload="source ~/.zshrc"
alias ..="cd .."
alias .-="cd -"


# git
alias gs="git status"
alias ga="git add"
alias gca="git commit -a"
alias gc="git commit -v -a"

# ruby, rails
alias r='rake'

# function to create directory and change into
function take {
  mkdir $1
  cd $1
}
